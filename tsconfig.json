{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "dist/node",
        "target": "ES5",
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "DOM",
            "ES5",
            "ScriptHost"
        ]
    },
    "include": [
        "src/**/*"
    ]
}